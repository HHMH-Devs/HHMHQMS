<Window x:Class="TestWizCapt_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestWizCapt_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="650">
    <Grid Margin="0,0,2,2">
        <Border BorderThickness="2" BorderBrush="Gray" HorizontalAlignment="Left" Height="259" Margin="35,34,0,0" VerticalAlignment="Top" Width="344">
            <Image x:Name="imgSig" HorizontalAlignment="Left" Height="259" VerticalAlignment="Top" Width="344"/>
        </Border>
        <Button x:Name="btnSign" Content="Sign" HorizontalAlignment="Left" Height="55" Margin="414,71,0,0" VerticalAlignment="Top" Width="108" Click="btnSign_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="55" Margin="414,202,0,0" VerticalAlignment="Top" Width="108" Click="btnCancel_Click"/>
        <TextBox x:Name="txtInfo" HorizontalAlignment="Left" Height="127" Margin="35,330,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="373"/>

    </Grid>
</Window>
